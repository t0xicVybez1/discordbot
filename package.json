{
  "name": "discordbot-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready multi-purpose Discord bot system",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build:deps": "pnpm --filter @discordbot/shared build && pnpm --filter @discordbot/addon-sdk build",
    "dev": "pnpm build:deps && concurrently \"pnpm --filter @discordbot/api dev\" \"pnpm --filter @discordbot/bot dev\" \"pnpm --filter @discordbot/web dev\"",
    "build": "pnpm --filter @discordbot/shared build && pnpm --filter @discordbot/addon-sdk build && pnpm --filter @discordbot/api build && pnpm --filter @discordbot/bot build && pnpm --filter @discordbot/web build",
    "start": "concurrently \"pnpm --filter @discordbot/api start\" \"pnpm --filter @discordbot/bot start\" \"pnpm --filter @discordbot/web start\"",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "tsx prisma/seed.ts",
    "deploy:commands": "pnpm db:generate && pnpm --filter @discordbot/bot deploy:commands"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "prisma": "^5.22.0",
    "@prisma/client": "^5.22.0"
  }
}
