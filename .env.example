# ============================================================
# Discord Bot Configuration
# ============================================================
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_GUILD_ID=your_dev_guild_id_here   # Optional: for dev guild command deployment

# ============================================================
# Database (PostgreSQL)
# ============================================================
DATABASE_URL=postgresql://discordbot:secret@localhost:5432/discordbot

# ============================================================
# Redis
# ============================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================================
# API Server
# ============================================================
API_PORT=4000
API_SECRET=your_super_secret_jwt_key_here_min_32_chars

# ============================================================
# Web Portal
# ============================================================
# Replace localhost with your public IP or domain when hosting remotely
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_DISCORD_CLIENT_ID=your_client_id_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ============================================================
# Discord OAuth2 Redirect
# ============================================================
# Must match exactly what is set in Discord Developer Portal → OAuth2 → Redirects
DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================================
# CORS (API access control)
# ============================================================
# Set to the URL of your web portal (where users access the site from their browser)
CORS_ORIGIN=http://localhost:3000

# ============================================================
# Bot Owner / Staff Config
# ============================================================
BOT_OWNER_IDS=your_user_id_here,another_owner_id
STAFF_GUILD_ID=your_staff_guild_id

# ============================================================
# Music (Optional - Lavalink)
# ============================================================
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass

# ============================================================
# Environment
# ============================================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================================
# Music (optional)
# ============================================================
# Path to YouTube cookies file (Netscape format) to bypass bot detection on server IPs
# Export from browser using "Get cookies.txt LOCALLY" Chrome extension on youtube.com
# YOUTUBE_COOKIES_FILE=/home/user/youtube-cookies.txt
